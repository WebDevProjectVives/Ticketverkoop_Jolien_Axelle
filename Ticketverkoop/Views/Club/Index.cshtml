@model IEnumerable<Ticketverkoop.ViewModel.ClubVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Clubs</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stadion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stadion)
            </td>
            <td>
                @Html.ActionLink("Koop abonnement", "Select", new { id = item.Club_ID })
            </td>

        </tr>
}
    </tbody>
</table>
<div>
    <a asp-controller="Club"
       asp-action="Info">
        Meer info
    </a>
</div>
<div class="form-group">
    <input type="button"
           value="Zie hier alle wedstrijden per club"
           onclick="location.href=' @Url.Action("WedstrijdenPerClub", "Club" ) '" 
           class="btn btn-primary"/>
</div>
<div class="form-group">
    <input type="button"
           value="Koop een abonnement voor jouw favoriete club"
           onclick="location.href=' @Url.Action("Index", "ShoppingCart" ) '"
           class="btn btn-info" />
</div>